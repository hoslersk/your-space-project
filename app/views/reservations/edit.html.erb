<h1>Modify your reservation</h1>

<%= form_for @reservation do |f| %>

<%= f.hidden_field :listing_id, value: @reservation.listing_id %>
<br>
<%= f.hidden_field :renter_id, value: @reservation.renter_id %>
<br>
<%= f.label :start_date %>
<%= f.date_select :start_date %>
<br>
<%= f.label :end_date %>
<%= f.date_select :end_date %>
<br>
<%= f.hidden_field :confirmed?, value: false %>
<%= f.submit %>


<% end %>
<%= link_to "Cancel reservation", reservation_path(@reservation), method: "delete" %>

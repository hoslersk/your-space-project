<!DOCTYPE html>
<html>
  <head>
    <title>YourSpace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%  if current_user %>
        <%#= @user.first_name %>  |  Welcome to Your Space | <%= link_to "sign out", '/signout', method: :delete  %>

        <%else %>
        <%= link_to "sign in", '/signin' %>
        insert registration link stuff here
        <% end %>

    </nav>
    <%= yield %>
  </body>
</html>
